<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="row">
    <div class="small-5">
      <label for="username">Username
        <%= f.text_field :username, autofocus: true, required: true %>
      </label>
    </div>

    <div class="small-5">
      <label for="email">Email
        <%= f.email_field :email, required: true %>
      </label>
    </div>

    <div class="small-5">
      <label for="password">Password
        <%= f.password_field :password , autocomplete: "off", required: true  %>
        <% if @validatable %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      </label>
    </div>

    <div class="small-5">
      <label for="email">Password (again)
        <%= f.password_field :password_confirmation, autocomplete: "off", required: true %>
      </label>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
