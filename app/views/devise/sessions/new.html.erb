<div class="row">

<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="small-5">
      <div class="field">
        <%= f.text_field :login, autofocus: true, required: true, placeholder: 'Email or Username' %>
      </div>
  </div>
  <div class="small-5">
      <div class="field">
        <%= f.password_field :password, autocomplete: "off", required: true, placeholder: 'Password'%>
      </div>
  </div>
  <div class="small-5">  
      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>
  </div>
  <div class="actions">
    <%= f.submit "Log in", :class => "button small" %>
    <br />
    <% end %>
  </div>
</div>
